<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.usuario.trabajosobreficheros.FicherosActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ImÃ¡genes: "/>

        <EditText
            android:id="@+id/edtImagenes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="http://alumno.mobi/~alumno/superior/aguilar/trabajoFicheros/imagenes.txt"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Frases: "/>

        <EditText
            android:id="@+id/edtFrases"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="http://alumno.mobi/~alumno/superior/aguilar/trabajoFicheros/frases.txt"/>

    </LinearLayout>

    <Button
        android:id="@+id/btnDescargar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Descargar"/>

    <ImageView
        android:id="@+id/imgImagenes"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"/>

    <TextView
        android:id="@+id/txvFrases"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3"/>

</LinearLayout>
